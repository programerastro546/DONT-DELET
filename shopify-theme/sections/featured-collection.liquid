{% comment %}
  Featured Collection Section
  Display products from a selected collection
{% endcomment %}

<section class="py-20 bg-gray-50">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      {% if section.settings.heading %}
        <h2 class="text-4xl font-bold text-gray-900 mb-4">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.subheading %}
        <p class="text-xl text-gray-600">{{ section.settings.subheading }}</p>
      {% endif %}
    </div>

    {% if section.settings.collection %}
      {% assign collection = collections[section.settings.collection] %}

      {% if collection.products.size > 0 %}
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 mb-12">
          {% for product in collection.products limit: section.settings.products_to_show %}
            {% render 'product-card', product: product %}
          {% endfor %}
        </div>

        {% if section.settings.show_view_all %}
          <div class="text-center">
            <a
              href="{{ collection.url }}"
              class="inline-block bg-gradient-to-r from-blue-600 to-teal-500 text-white font-semibold px-8 py-4 rounded-xl hover:from-blue-700 hover:to-teal-600 transition-all transform hover:scale-105 shadow-lg"
            >
              {{ section.settings.button_text | default: 'View All Products' }}
            </a>
          </div>
        {% endif %}
      {% else %}
        <div class="text-center py-12">
          <p class="text-gray-500">No products in this collection</p>
        </div>
      {% endif %}
    {% else %}
      <div class="text-center py-12 bg-yellow-50 rounded-xl">
        <p class="text-gray-700">Please select a collection in the theme editor</p>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Featured Collection",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Prompts"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover our most popular AI prompts"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 1,
      "label": "Products to Show",
      "default": 8
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show View All Button",
      "default": true
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "View All Products"
    }
  ],
  "presets": [
    {
      "name": "Featured Collection"
    }
  ]
}
{% endschema %}
