{% comment %}
  Hero Banner Section - Homepage
  Fully customizable with Shopify theme editor
{% endcomment %}

<section class="hero-section relative overflow-hidden" style="min-height: {{ section.settings.height }}vh;">
  {% if section.settings.background_image %}
    <div class="absolute inset-0">
      <img
        src="{{ section.settings.background_image | img_url: '2000x' }}"
        alt="{{ section.settings.heading | escape }}"
        loading="eager"
        width="2000"
        height="1200"
        class="w-full h-full object-cover"
        style="object-position: {{ section.settings.image_position }};"
      >
      <div class="absolute inset-0 bg-gradient-to-r" style="background: linear-gradient(135deg, rgba(30, 41, 59, {{ section.settings.overlay_opacity }}%) 0%, rgba(8, 145, 178, {{ section.settings.overlay_opacity | minus: 10 }}%) 50%, rgba(45, 212, 191, {{ section.settings.overlay_opacity | minus: 20 }}%) 100%);"></div>
    </div>
  {% else %}
    <div class="absolute inset-0 bg-gradient-to-br from-blue-600 via-cyan-600 to-teal-500"></div>
  {% endif %}

  <div class="relative z-10 container mx-auto px-4 sm:px-6 lg:px-8 h-full flex items-center justify-center text-center" style="min-height: {{ section.settings.height }}vh;">
    <div class="max-w-4xl mx-auto text-white">
      {% if section.settings.badge_text %}
        <div class="inline-flex items-center gap-2 bg-white/10 backdrop-blur-sm px-4 py-2 rounded-full mb-8 border border-white/20">
          <div class="w-2 h-2 bg-white rounded-full animate-pulse"></div>
          <span class="text-sm font-medium">{{ section.settings.badge_text }}</span>
        </div>
      {% endif %}

      {% if section.settings.heading %}
        <h1 class="text-5xl md:text-7xl font-bold mb-6 leading-tight" style="animation: fadeInUp 0.8s ease-out;">
          {{ section.settings.heading }}
        </h1>
      {% endif %}

      {% if section.settings.subheading %}
        <p class="text-xl md:text-2xl mb-8 text-white/90 leading-relaxed max-w-2xl mx-auto" style="animation: fadeInUp 0.8s ease-out 0.2s backwards;">
          {{ section.settings.subheading }}
        </p>
      {% endif %}

      {% if section.settings.button_text %}
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12" style="animation: fadeInUp 0.8s ease-out 0.4s backwards;">
          <a
            href="{{ section.settings.button_link }}"
            class="inline-block bg-white text-gray-900 px-8 py-4 rounded-xl font-semibold hover:bg-gray-100 transition-all transform hover:scale-105 shadow-lg"
          >
            {{ section.settings.button_text }}
          </a>
          {% if section.settings.button_text_secondary %}
            <a
              href="{{ section.settings.button_link_secondary }}"
              class="inline-block border-2 border-white text-white px-8 py-4 rounded-xl font-semibold hover:bg-white hover:text-gray-900 transition-all"
            >
              {{ section.settings.button_text_secondary }}
            </a>
          {% endif %}
        </div>
      {% endif %}

      {% if section.blocks.size > 0 %}
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center" style="animation: fadeInUp 0.8s ease-out 0.6s backwards;">
          {% for block in section.blocks %}
            <div class="floating-metric">
              <div class="text-3xl font-bold text-white mb-2">{{ block.settings.value }}</div>
              <div class="text-sm text-white/80">{{ block.settings.label }}</div>
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</section>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .floating-metric {
    animation: float 6s ease-in-out infinite;
  }

  .floating-metric:nth-child(2) {
    animation-delay: 0.5s;
  }

  .floating-metric:nth-child(3) {
    animation-delay: 1s;
  }

  .floating-metric:nth-child(4) {
    animation-delay: 1.5s;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }
</style>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "range",
      "id": "height",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "vh",
      "label": "Section Height",
      "default": 90
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image Position",
      "options": [
        { "value": "center", "label": "Center" },
        { "value": "top", "label": "Top" },
        { "value": "bottom", "label": "Bottom" }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Overlay Opacity",
      "default": 70
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
      "default": "Discover the best AI prompts"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "PromptFolio Hub"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "A curated collection of high-quality AI prompts for ChatGPT, Claude, and Midjourney."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Browse Shop"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_text_secondary",
      "label": "Secondary Button Text"
    },
    {
      "type": "url",
      "id": "button_link_secondary",
      "label": "Secondary Button Link"
    }
  ],
  "blocks": [
    {
      "type": "metric",
      "name": "Metric",
      "settings": [
        {
          "type": "text",
          "id": "value",
          "label": "Value",
          "default": "50+"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Quality Prompts"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "blocks": [
        { "type": "metric" },
        { "type": "metric" },
        { "type": "metric" },
        { "type": "metric" }
      ]
    }
  ]
}
{% endschema %}
