{% comment %}
  Breadcrumb Navigation
  Accessible breadcrumb trail
{% endcomment %}

<nav aria-label="Breadcrumb" class="mb-8">
  <ol class="flex items-center space-x-2 text-sm">
    <li>
      <a href="/" class="text-gray-600 hover:text-gray-900 transition-colors">
        Home
      </a>
    </li>

    {% if template contains 'product' %}
      {% if collection %}
        <li class="flex items-center space-x-2">
          <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
          <a href="{{ collection.url }}" class="text-gray-600 hover:text-gray-900 transition-colors">
            {{ collection.title }}
          </a>
        </li>
      {% endif %}
      <li class="flex items-center space-x-2">
        <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <span class="text-gray-900 font-medium" aria-current="page">{{ product.title }}</span>
      </li>
    {% elsif template == 'collection' %}
      <li class="flex items-center space-x-2">
        <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <span class="text-gray-900 font-medium" aria-current="page">{{ collection.title }}</span>
      </li>
    {% endif %}
  </ol>
</nav>
