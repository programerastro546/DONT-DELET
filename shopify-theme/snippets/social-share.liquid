{% comment %}
  Social Share Buttons
  Allow users to share products on social media
{% endcomment %}

<div class="flex items-center gap-4 p-4 bg-gray-50 rounded-lg">
  <span class="text-sm font-medium text-gray-700">Share:</span>

  <a
    href="https://www.facebook.com/sharer.php?u={{ share_permalink | url_encode }}"
    target="_blank"
    rel="noopener noreferrer"
    class="p-2 text-gray-600 hover:text-blue-600 transition-colors"
    aria-label="Share on Facebook"
  >
    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
      <path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"></path>
    </svg>
  </a>

  <a
    href="https://twitter.com/intent/tweet?url={{ share_permalink | url_encode }}&text={{ share_title | url_encode }}"
    target="_blank"
    rel="noopener noreferrer"
    class="p-2 text-gray-600 hover:text-blue-400 transition-colors"
    aria-label="Share on Twitter"
  >
    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
      <path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"></path>
    </svg>
  </a>

  <a
    href="https://pinterest.com/pin/create/button/?url={{ share_permalink | url_encode }}&description={{ share_title | url_encode }}&media={{ share_image | img_url: 'large' | prepend: 'https:' | url_encode }}"
    target="_blank"
    rel="noopener noreferrer"
    class="p-2 text-gray-600 hover:text-red-600 transition-colors"
    aria-label="Share on Pinterest"
  >
    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
      <path d="M8 12a4 4 0 118 0 4 4 0 01-8 0zm4-6a6 6 0 100 12 6 6 0 000-12z"></path>
      <circle cx="18.5" cy="5.5" r="1.5"></circle>
      <path d="M7.5 2h9A5.5 5.5 0 0122 7.5v9a5.5 5.5 0 01-5.5 5.5h-9A5.5 5.5 0 012 16.5v-9A5.5 5.5 0 017.5 2z"></path>
    </svg>
  </a>

  <button
    type="button"
    class="p-2 text-gray-600 hover:text-gray-900 transition-colors"
    onclick="navigator.clipboard.writeText('{{ share_permalink }}').then(() => alert('Link copied to clipboard!'))"
    aria-label="Copy link"
  >
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
    </svg>
  </button>
</div>
